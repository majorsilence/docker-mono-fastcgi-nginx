# The NGINX_PORT and APP_ROOT values are replaced by runit_bootstrap script which reads the values from environment variables with the same name
# Default values set in bootstrap are:
# NGINX_PORT: 80
# APP_ROOT: /var/www
server {
	listen <NGINX_PORT>;

	location / {
		root <APP_ROOT>;
		fastcgi_index /;
		fastcgi_pass unix:/tmp/fastcgi.socket;
		include /etc/nginx/fastcgi_params;
	}
}
